		<property name="nextXPath" value="//*/li[@class='next']/a" />
		<property name="productNameXPath" value="/div[@class='header']/div/div[@class='name']/a" />
		<property name="productURLXPath" value="/div[@class='header']/div/div[@class='name']/a" />
		<property name="productPriceXPath" value="/div[@class='content']/div[@class='pricing']/div[@class='priceValue']/div[@class='altFontFace price']" />
