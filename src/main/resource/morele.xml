<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="morele" class="com.timeron.MultiObserver.shop.bean.Morele">
		<property name="shopName" value="Morele" />
		<property name="url" value="http://www.morele.net/" />
		<property name="shopId" value="1" />
		<property name="articlesDivXPath" value="//*[@id='product_list']/form/div/div[@class='product']" />
		<property name="nextXPath" value="//*[@id='pager']/ul/li[3]/a" />
		<property name="productNameXPath" value="/div[2]/a[@class='name']" />
		<property name="productURLXPath" value="/div[2]/a[@class='name']" />
		<property name="productPriceXPath" value="/div[3]/p[@class='price']" />
		<property name="productOldPriceXPath" value="//*[@class='old-price']" />
	</bean>

</beans>